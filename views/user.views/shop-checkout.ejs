<%- include ('./layouts/head.ejs') %>   
    <body>
        
        <%- include ('./partials/user.header.ejs') %>


           <div class="col-md-10" style="margin-left: 80px;">
            <div class="order_review">
                <div class="mb-20">
                    <h4>Your Orders</h4>
                </div>
                <div class="table-responsive order_table text-center">
                    <table class="table">
                        <thead>
                            <tr>
                                <th colspan="2">Product</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(typeof(userCart) !== "undefined") { %>
                                <% userCart.forEach((user) => { %>

                                    <tr>
                                        <td class="image product-thumbnail"><img src="<%= user.product[0].images[0].url %>" alt="#">
                                        </td>
                                        <td style="max-width: 200px;">
                                            <h5 ><a href="shop-product-full.html"><%= user.product[0].name %></a></h5>
                                            <span class="product-qty">x <%= user.cart.quantity %></span>
                                        </td>
                                        <td class="subTotal">&#8377 <%= user.subTotal %></td>
                                    </tr>

                               <% }) %>
                                
                                <%} %>
                            <tr>
                                <th>SubTotal</th>
                                <td class="product-subtotal" id="totalBeforeApplyingCoupon" colspan="2"></td>
                            </tr>
                            <tr>
                                <th>
                                    <div>
                                        <form method="post">
                                            <div class="form-group">
                                                <input type="text" placeholder="Enter Coupon Code...">
                                            </div>
                                            <div class="form-group">
                                                <button class="btn  btn-md" name="login">Apply Coupon</button>
                                            </div>
                                        </form>
                                    </div>
                                </th>
                                <td>
                                    -500
                                </td>
                            </tr>

                            <tr>
                                <th>Total</th>
                                <td colspan="2" class="product-subtotal"><span
                                        class="font-xl text-brand fw-900">$280.00</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="bt-1 border-color-1 mt-30 mb-30"></div>
                <div class="payment_method" style="margin-left: 550px;">
                    <div class="mb-25">
                        <h5>Payment</h5>
                    </div>
                    <div class="payment_option">
                        <div class="custome-radio">
                            <input class="form-check-input" required="" type="radio" name="payment_option"
                                id="exampleRadios3" checked="">
                            <label class="form-check-label" for="exampleRadios3" data-bs-toggle="collapse"
                                data-target="#bankTranfer" aria-controls="bankTranfer">Direct Bank
                                Transfer</label>
                            <div class="form-group collapse in" id="bankTranfer">
                                <p class="text-muted mt-5">There are many variations of passages of Lorem
                                    Ipsum available, but the majority have suffered alteration. </p>
                            </div>
                        </div>
                        <div class="custome-radio">
                            <input class="form-check-input" required="" type="radio" name="payment_option"
                                id="exampleRadios4" checked="">
                            <label class="form-check-label" for="exampleRadios4" data-bs-toggle="collapse"
                                data-target="#checkPayment" aria-controls="checkPayment">Check
                                Payment</label>
                            <div class="form-group collapse in" id="checkPayment">
                                <p class="text-muted mt-5">Please send your cheque to Store Name, Store
                                    Street, Store Town, Store State / County, Store Postcode. </p>
                            </div>
                        </div>
                        <div class="custome-radio">
                            <input class="form-check-input" required="" type="radio" name="payment_option"
                                id="exampleRadios5" checked="">
                            <label class="form-check-label" for="exampleRadios5" data-bs-toggle="collapse"
                                data-target="#paypal" aria-controls="paypal">Paypal</label>
                            <div class="form-group collapse in" id="paypal">
                                <p class="text-muted mt-5">Pay via PayPal; you can pay with your credit card
                                    if you don't have a PayPal account.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <a style="margin-left: 550px;" href="#" class="btn btn-fill-out btn-block mt-30">Place Order</a>
            </div>
        </div>
        </div>
        </div>
        </section>
    </main>
   
    
    <script>
        document.addEventListener("DOMContentLoaded", loadTotalAmount)

            function loadTotalAmount() {
                let elements = document.getElementsByClassName("subTotal")
                elements = Array.from(elements)


                const totalAmount = elements.reduce((accumulator, value) => {
                    return parseInt(value.textContent) + accumulator;
                }, 0)

                let totalBeforeApplyingCouponElement = document.getElementById("totalBeforeApplyingCoupon")
                totalBeforeApplyingCouponElement.textContent = '\u20B9 ' + totalAmount

                let totalAmountElement = document.getElementById("totalAmount")
                totalAmountElement.textContent = '\u20B9 ' + totalAmount

            }
    </script>

    
