    <body>
        <%- include ('./partials/user.header.ejs') %>


            <main class="main">
                <div class="page-header breadcrumb-wrap">
                    <div class="container">
                        <div class="breadcrumb">
                            <a href="index.html" rel="nofollow">Home</a>
                            <span></span> Shop
                            <span></span> Your Cart
                        </div>
                    </div>
                </div>
                <section class="mt-50 mb-50">
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive">
                                    <table class="table shopping-summery text-center clean">
                                        <thead>
                                            <tr class="main-heading">
                                                <th scope="col">Image</th>
                                                <th scope="col">Name</th>
                                                <th scope="col">Price</th>
                                                <th scope="col">Quantity</th>
                                                <th scope="col">Subtotal</th>
                                                <th scope="col">Remove</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if(typeof(userCart)!=="undefined" ) {%>

                                                <% userCart.forEach((user)=> { %>

                                                    <tr>
                                                        <td class="image product-thumbnail"><img
                                                                src="<%=user.product[0].images[0].url%>" alt="#"></td>
                                                        <td class="product-des product-name" style="max-width: 200px;">
                                                            <h5 class="product-name"><a
                                                                    href="/product/view-user/<%=user.product._id%>">
                                                                    <%=user.product[0].name %>
                                                                </a></h5>

                                                        </td>
                                                        <td class="price" id="<%=user.product[0]._id %>price" data-title="Price"><span>
                                                                <%=user.product[0].price %>
                                                            </span>
                                                        </td>
                                                        <td class="text-center" data-title="Stock">
                                                            <div class="detail-qty border radius  m-auto">
                                                                <a class="qty-down"
                                                                    onclick="decreaseQuantity('<%=user.product[0]._id%>')"><i
                                                                        class="fi-rs-angle-small-down"></i></a>
                                                                <span class="qty-val"
                                                                    id="<%=user.product[0]._id %>"><%=user.cart.quantity %></span>
                                                                <a class="qty-up"
                                                                    onclick="increaseQuantity('<%=user.product[0]._id%>')"><i
                                                                        class="fi-rs-angle-small-up"></i></a>
                                                            </div>
                                                        </td>
                                                        <td class="text-right" data-title="Cart">
                                                            <span class="subTotal" id="<%=user.product[0]._id %>subTotal"><%=user.subTotal %> </span>
                                                        </td>
                                                        <td class="action" data-title="Remove"><a onclick="deleteFromCart('<%=user.product[0]._id %>')"
                                                                class="text-muted"><i class="fi-rs-trash"></i></a>
                                                        </td>
                                                    </tr>

                                                    <% }) %>


                                                        <%} %>



                                                            <tr>
                                                                <td colspan="6" class="text-end">
                                                                    <a href="#" class="text-muted"> <i
                                                                            class="fi-rs-cross-small"></i>
                                                                        Clear Cart</a>
                                                                </td>
                                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <!-- <div class="cart-action text-end">
                                    <a class="btn  mr-10 mb-sm-15"><i class="fi-rs-shuffle mr-10"></i>Update Cart</a>
                                    <a class="btn "><i class="fi-rs-shopping-bag mr-10"></i>Continue Shopping</a>
                                </div> -->
                                <!-- <div class="divider center_icon mt-50 mb-50"><i class="fi-rs-fingerprint"></i></div> -->

                                <% if(typeof(userCart)!=="undefined" ) {%>

                                <div class="col-6" style="margin-left: 650px;">
                                    <div class="border p-md-4 p-30 border-radius cart-totals">
                                        <div class="heading_s1 mb-3">
                                            <h4>Cart Totals</h4>
                                        </div>
                                        <div class="table-responsive">
                                            <table class="table">
                                                <tbody>
                                                    <tr>
                                                        <td class="cart_total_label">Cart Subtotal</td>
                                                        <td class="cart_total_amount"><span
                                                                class="font-lg fw-900 text-brand">$240.00</span></td>
                                                    </tr>
                                                    <tr>
                                                        <td class="cart_total_label">Shipping</td>
                                                        <td class="cart_total_amount"> <i class="ti-gift mr-5"></i> Free
                                                            Shipping</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="cart_total_label">Total</td>
                                                        <td class="cart_total_amount"><strong><span
                                                                    class="font-xl fw-900 text-brand">$240.00</span></strong>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                        <a href="#" class="btn "> <i class="fi-rs-box-alt mr-10"></i> Proceed To
                                            CheckOut</a>
                                    </div>
                                </div>

                                <% } %>
                            </div>

                        </div>
                    </div>
                    </div>
                </section>
            </main>

            <script>

               


                //For updating quantity at server side
                function increaseQuantity(productId) {
                    // When update the quantity, take the element
                    // Take the innerhtml of it, and store it in quantity
                    // send a fetch request
                    let quantity = document.getElementById(productId).innerHTML;
                    quantity = parseInt(quantity)

                    if (quantity <= 0) {
                         quantity = 1;
                         } 
                   
                    let data = { quantity, productId, todo: "increase" }
                    
                       const jsonData = JSON.stringify(data); fetch("/cart/update", {
                            method: "PUT", headers: {
                                'Content-Type'
                                    : 'application/json'
                            }, body: jsonData,
                        }).then((res) => {
                            return res.json()
                        })
                          
                            .then((data) => {
                               document.getElementById(productId).innerHTML = data
                           }).then( updateSubTotal

                               // Now updating the subtotal amount
                            
                           )

                           function updateSubTotal (){
                              const newQuantity = document.getElementById(productId).innerHTML;
                               const price = document.getElementById(productId + "price").textContent;
                               console.log(newQuantity);
                               console.log(price);

                               const subTotal = document.getElementById(productId + "subTotal")
                               const newSubTotal = newQuantity * price;
                               subTotal.innerHTML = newSubTotal
                           }

                }

                function decreaseQuantity(productId) {
                    // When update the quantity, take the element
                    // Take the innerhtml of it, and store it in quantity
                    // send a fetch request
                    let quantity = document.getElementById(productId).innerHTML;
                    quantity = parseInt(quantity)   
                   
                    if (quantity <= 0){
                      quantity = 1;
                     } 
                     let data = { quantity, productId, todo: "decrease" } 
                    
                       const jsonData = JSON.stringify(data); fetch("/cart/update", {
                            method: "PUT", headers: {
                                'Content-Type'
                                    : 'application/json'
                            }, body: jsonData,
                        }).then((res) => {
                            return res.json()
                        })
                            .then((data) => {
                                document.getElementById(productId).innerHTML = data
                            })
                            .then(updateSubTotal)

               

                    function updateSubTotal() {
                        const newQuantity = document.getElementById(productId).innerHTML;
                        const price = document.getElementById(productId + "price").textContent;
                       
                        const subTotal = document.getElementById(productId + "subTotal")
                        const newSubTotal = newQuantity * price;
                        subTotal.innerHTML = newSubTotal
                    }

                }



                // When presing remove button, it is making a fetch
                // request to cart/delete, and deleting the product
                // from the cart array

                function deleteFromCart(productId){

                    const data = {
                        productId
                    }
                    const jsonData = JSON.stringify(data)

                    fetch("/cart/delete", {
                        method:"PUT",
                         headers: {
                            'Content-Type'
                                : 'application/json'
                        },
                         body: jsonData,

                    })
                    .then((res) => {
                        if(res.ok){
                            window.location.reload()
                        }
                    })  
                }


                
            </script>

